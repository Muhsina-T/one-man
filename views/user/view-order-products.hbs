<h1> Edit this page (view-order-products)</h1>


<section>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="col-md-2 p-3">
                <div class="card " style="height: 26rem">
                  
                    <img src="/product-images/{{this.product._id}}.jpg" class="card-img-top" alt="..." style="height:15rem">
                    <div class="card-body">
                        <h5 class="card-title" style="font-size:medium">{{this.product.item}}</h5>
                        <p class="card-text">{{this.product.category}}</p>
                        <h5 class="card-text">Rs : {{this.product.price}}</h5>

                       

                    </div>
                </div>

            </div>
            {{/each}}
        </div>
    </div>
</section>