<section>
    <div class="container mt-4">
        <div class = "container" >
            <a href = "/admin/add-products" class="btn btn-success ">Add Product</a>
        </div>
        <table class="table mt-5" id="productsTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Item</th>
                    <th scope="col">Category</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th>Image</th>
                    <th>Options</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <th scope="row">1</th>
                    <td>{{this.item}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.description}}</td>
                     <td>{{this.price}}</td>
                    <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
                    <td>
                        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" >Edit</a>
                         <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you want to delete {{this.item}}')" >Delete</a>
                    </td>

                </tr>
                {{/each}}

            </tbody>
        </table>
    </div>
</section>

<script>
    $(function () {
    $('#productsTable').DataTable();
} );
</script>